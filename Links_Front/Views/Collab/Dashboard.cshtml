@model IEnumerable<Links_Front.Models.Client>

@{
    ViewData["Title"] = "Manager Dashboard";
}

<div class="container-fluid ">
    <div class="row">
        <div class="col-8 bg-white admin-containers g-3" id="Adm_UserList_Container">
            <table class="table">
                <thead>
                    <h3 class="text-black text-center">Active Clients</h3>
                    <hr/ class="text-black">
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Id)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Name)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Email)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Phone)
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <th>
                                @Html.DisplayFor(modelItem => item.Id)
                            </th>
                            <td>
                                @Html.DisplayFor(modelItem => item.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Email)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Phone)
                            </td>
                            <td>
                                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                                <a asp-action="EditClient" asp-route-id="@item.Id">Edit</a> |
                                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <div class="col"></div>
        <div class="col-3 g-3">
            <div class="bg-white" id="Adm_Controls_Container">
                <button>
                    <a asp-action="Create">Create New</a>
                </button>
            </div>
        </div>
    </div>
</div>

